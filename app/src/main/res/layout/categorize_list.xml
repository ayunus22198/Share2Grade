<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/qAboutName"
        android:layout_width="335dp"
        android:layout_height="334dp"
        android:fontFamily="sans-serif-condensed"
        android:text="What do you want your list name to be?"
        android:textSize="55sp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        android:text="Submit"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qAboutName" />

    <EditText
        android:id="@+id/listName"
        android:layout_width="234dp"
        android:layout_height="40dp"
        android:layout_marginRight="29dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name of List"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonSubmit"
        app:layout_constraintRight_toLeftOf="@+id/buttonSubmit" />
</android.support.constraint.ConstraintLayout>