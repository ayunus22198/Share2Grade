<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/HeyText"
        android:layout_width="87dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:fontFamily="monospace"
        android:text="Hey!"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ThanksText"
        android:layout_width="374dp"
        android:layout_height="84dp"
        android:layout_marginTop="9dp"
        android:text="Thanks for joining Share2Grade!"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="36sp"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HeyText" />

    <TextView
        android:id="@+id/KnowMoreText"
        android:layout_width="374dp"
        android:layout_height="58dp"
        android:layout_marginTop="24dp"
        android:text="Before we begin, let's confirm your information!"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ThanksText" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="81dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Name: "
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/KnowMoreText"
        tools:text="Name: " />

    <EditText
        android:id="@+id/promptName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="71dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/nameText"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/emailText"
        android:layout_width="69dp"
        android:layout_height="31dp"
        android:layout_marginLeft="16dp"
        android:text="Email: "
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/nameText" />

    <EditText
        android:id="@+id/promptEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="84dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/emailText"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/finalized"
        android:layout_width="368dp"
        android:layout_height="47dp"
        android:layout_marginTop="51dp"
        android:text="You know me, let's start!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/promptEmail" />
</android.support.constraint.ConstraintLayout>